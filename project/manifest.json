{
  "manifest_version": 3,
  "name": "Kick Twitch Bridge",
  "description": "Replaces Kick Chat with one that also bridges Twitch",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "*://*.kick.com/*"
      ],
      "js": [
        "kick-connector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png"
    }
  },
  "action": {
    "default_icon": "icons/32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  }
}
